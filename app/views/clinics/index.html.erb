<p id="notice"><%= notice %></p>

<h1>Clinics</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Founded since</th>
      <th>State</th>
      <th>City</th>
      <th>Address</th>
      <th>Visit count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.logo %></td>
        <td><%= clinic.name %></td>
        <td><%= clinic.description %></td>
        <td><%= clinic.founded_since %></td>
        <td><%= clinic.state %></td>
        <td><%= clinic.city %></td>
        <td><%= clinic.address %></td>
        <td><%= clinic.visit_count %></td>
        <td><%= link_to 'Show', clinic %></td>
        <td><%= link_to 'Edit', edit_clinic_path(clinic) %></td>
        <td><%= link_to 'Destroy', clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

